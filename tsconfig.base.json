{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@microservice-platform/notification-service/*": [
        "apps/notification-service/src/*"
      ],
      "@microservice-platform/elasticsearch-service/*": [
        "apps/elasticsearch-service/src/*"
      ],
      "@microservice-platform/job-service/*": [
        "apps/job-service/src/*"
      ],
      "@microservice-platform/game-service/*": [
        "apps/game-service/src/*"
      ],
      "@microservice-platform/platform-gateway/*": [
        "apps/platform-gateway/src/*"
      ],
      "@microservice-platform/user-service/*": [
        "apps/user-service/src/*"
      ],
      "@microservice-platform/orchestrator-service/*": [
        "apps/orchestrator-service/src/*"
      ],
      "@microservice-platform/shared/objection": [
        "libs/shared/src/modules/objection/index.ts"
      ],
      "@microservice-platform/shared/validator": [
        "libs/shared/src/validator/index.ts"
      ],
      "@microservice-platform/shared/exceptions": [
        "libs/shared/src/exceptions/index.ts"
      ],
      "@microservice-platform/shared/decorators": [
        "libs/shared/src/decorators/index.ts"
      ],
      "@microservice-platform/shared/passports": [
        "libs/shared/src/passports/index.ts"
      ],
      "@microservice-platform/shared/microservices": [
        "libs/shared/src/microservices/index.ts"
      ],
      "@microservice-platform/shared/guards": [
        "libs/shared/src/guards/index.ts"
      ],
      "@microservice-platform/shared/constants": [
        "libs/shared/src/constants/index.ts"
      ],
      "@microservice-platform/shared/transformers": [
        "libs/shared/src/transformers/index.ts"
      ],
      "@microservice-platform/shared/interfaces": [
        "libs/shared/src/interfaces/index.ts"
      ],
      "@microservice-platform/shared/utils": [
        "libs/shared/src/utils/index.ts"
      ],
      "@microservice-platform/shared/configs": [
        "libs/shared/src/configs/index.ts"
      ],
      "@microservice-platform/shared/filters/*": [
        "libs/shared/src/filters/*"
      ],
      "@microservice-platform/shared/types/*": [
        "libs/shared/src/types/*"
      ],
      "@microservice-platform/shared/dtos": [
        "libs/shared/src/dtos/index.ts"
      ],
      "@microservice-platform/shared/transactions/*": [
        "libs/shared/src/transactions/*"
      ],
      "@microservice-platform/shared/m-event-publisher": [
        "libs/shared/src/modules/m-event-publisher/index.ts"
      ],
      "@microservice-platform/shared/notification": [
        "libs/shared/src/modules/notification/index.ts"
      ],
      "@microservice-platform/shared/interceptors": [
        "libs/shared/src/interceptors/index.ts"
      ],
      "@microservice-platform/shared/metric": [
        "libs/shared/src/modules/metric/index.ts"
      ],
      "@microservice-platform/shared/loggers": [
        "libs/shared/src/modules/loggers/index.ts"
      ],
      "@microservice-platform/shared/cache": [
        "libs/shared/src/cache/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}